                                                Header="{Infrastructure:Localized pluginsTemplate-typeHeader}" 
                                                DisplayMemberBinding="{Binding Path=Kind}"/>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>

                <Button Grid.Row="1"
                        Grid.Column="0"
                        Margin="0, 2.5, 2.5, 0"
